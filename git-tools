<body>
    <div class="calculator">
        <div class="display" id="display">0</div>
        
        <div class="buttons">
            <button class="clear" onclick="clearDisplay()">AC</button>
            <button class="operator" onclick="appendInput('(')">(</button>
            <button class="operator" onclick="appendInput(')')">)</button>
            <button class="operator" onclick="appendInput('/')">/</button>

            <button onclick="appendInput('7')">7</button>
            <button onclick="appendInput('8')">8</button>
            <button onclick="appendInput('9')">9</button>
            <button class="operator" onclick="appendInput('')"></button>

            <button onclick="appendInput('4')">4</button>
            <button onclick="appendInput('5')">5</button>
            <button onclick="appendInput('6')">6</button>
            <button class="operator" onclick="appendInput('-')">-</button>

            <button onclick="appendInput('1')">1</button>
            <button onclick="appendInput('2')">2</button>
            <button onclick="appendInput('3')">3</button>
            <button class="operator" onclick="appendInput('+')">+</button>

            <button onclick="appendInput('0')">0</button>
            <button onclick="appendInput('.')">.</button>
            <button class="equals" onclick="calculateResult()">=</button>
        </div>
    </div>

    <script>
        // Get the display element
        const display = document.getElementById('display');
        let currentInput = '';
        let resultCalculated = false;

        // Function to handle number/operator button clicks
        function appendInput(value) {
            // If a result was just calculated, clear the display before starting a new calculation
            if (resultCalculated) {
                clearDisplay();
                resultCalculated = false;
            }
            
            // Prevent leading zeros if the input is empty (unless it's '0.')
            if (currentInput === '0' && value !== '.') {
                currentInput = value;
            } else {
                currentInput += value;
            }
            
            display.innerText = currentInput;
        }

        // Function to clear the display (AC button)
        function clearDisplay() {
            currentInput = '';
            display.innerText = '0';
            resultCalculated = false;
        }

        // Function to calculate the final result (= button)
        function calculateResult() {
            if (currentInput === '') {
                display.innerText = '0';
                return;
            }
            
            try {
                // The 'eval()' function is used to securely evaluate the math expression string.
                // It is generally avoided in professional code for security, but is simplest for a basic calculator.
                let result = eval(currentInput); 
                
                // Fix for floating point precision issues (e.g., 0.1 + 0.2)
                if (result.toString().includes('.') && result.toString().split('.')[1].length > 10) {
                     result = result.toFixed(10);
                }

                display.innerText = result;
                currentInput = String(result);
                resultCalculated = true;

            } catch (e) {
                // Handle invalid expressions (like '5++')
                display.innerText = 'Error';
                currentInput = '';
            }
        }
    </script>
</body>
</html>